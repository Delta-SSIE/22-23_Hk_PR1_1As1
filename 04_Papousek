using System;

namespace _03_Papousek
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Ahoj, jsem virtuální papoušek Lóra, rád opakuji!");
            Console.WriteLine("Napiš něco: ");

            string vstup;   // vytnoření proměnné datového typu string
            vstup = Console.ReadLine(); // uložní zadaného textu do proměnné vstup

            /* ZJEDNODUŠENÝ ZÁPIS DO PROMĚNNÉ
            string vstup = Console.ReadLine(); 
            */

            string vystup;  // vytnoření proměnné datového typu string
            vystup = vstup + ", " + vstup + "!"; //Naplnění proměnné vystup novým řetezce string

            /* ZKRÁCENÁ VARIANTA
             string vystup = vstup + ", " + vstup + "!"; 
             */

            Console.WriteLine(vystup); // výpis hodnoty prommně vstup
            Console.ReadKey();
        }
    }
}
